<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.classyinc.classytreasurer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.classyinc.classytreasurer.Utils.ClassyTreasurer"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_name" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming notification message. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name="com.classyinc.classytreasurer.Developer"
            android:noHistory="true">

        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6826247666109501~7454811121" />

        <activity
            android:name="com.classyinc.classytreasurer.RewardActivity"
            android:noHistory="true">

        </activity>

        <activity
            android:name="com.classyinc.classytreasurer.RequestFeature"
            android:noHistory="true" />
        <activity
            android:name="com.classyinc.classytreasurer.PaymentDetails"
            android:noHistory="true" />
        <activity
            android:name="com.classyinc.classytreasurer.PayActivity"
            android:noHistory="true" />
        <activity
            android:name="com.classyinc.classytreasurer.HomeActivity"
            android:noHistory="true" />
        <activity
            android:name="com.classyinc.classytreasurer.ResetActivity"
            android:noHistory="true" />
        <activity
            android:name="com.classyinc.classytreasurer.RegistrationActivity"
            android:noHistory="true" />
        <activity
            android:name="com.classyinc.classytreasurer.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>