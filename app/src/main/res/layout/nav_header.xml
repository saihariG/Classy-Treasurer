<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:background="@drawable/nav_header_design"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    app:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_nav_app_logo_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription=""
        android:paddingTop="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nav_header_email_id"
            android:text="@string/krishnansaihari_gmail_com"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/ubuntu_medium"
            android:textStyle="bold"
            android:layout_weight="4"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtdrivername_id"
            android:text="@string/classy_inc"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/date_color"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_weight="4"/>

    </LinearLayout>

</LinearLayout>